@using System.Globalization
@model Vives_FrietShop.Models.ShopItem;

@{
    //culture wordt gebruikt om een prijs in correcte vorm weer te geven
    var culture = CultureInfo.CreateSpecificCulture("nl-BE");
}

<div class="row mt-5">
    <div class="col">
        <p class="btn btn-secondary m-1" style="width: 50%;">
            @Model.Naam (@Model.Prijs.ToString("C", culture))
        </p>
    </div>
    
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" value="@Model.Id"/>
            <label asp-for="Naam"></label>
            <input asp-for="Naam" class="form-control" value="@Model.Naam"/>
            <span asp-validation-for="Naam" class="text-danger"></span>
            <br />
            
            <label asp-for="Prijs" class="mt-3">Prijs</label>
            <input asp-for="Prijs" class="form-control" value="@Model.Prijs"/>
            <span asp-validation-for="Prijs" class="text-danger"></span>
            <br />
            
            <input type="submit" class="btn btn-primary mt-3" value="Opslaan"/>
        </form>
    </div>
    
</div>